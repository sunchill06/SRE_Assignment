[Unit]
Description=Tomcat
After=syslog.target network.target

[Service]
Type=forking

User=tomcat{{ http_port }}
Group=tomcat{{ http_port }}

Environment=JAVA_HOME={{ JAVA_HOME }}
Environment='JAVA_OPTS=-Djava.awt.headless=true'

Environment=CATALINA_HOME=/usr/share/tomcat{{ http_port }}
Environment=CATALINA_BASE=/usr/share/tomcat{{ http_port }}
Environment=CATALINA_PID=/usr/share/tomcat{{ http_port }}/temp/tomcat.pid

ExecStart=/usr/share/tomcat{{ http_port }}/bin/catalina.sh start
ExecStop=/usr/share/tomcat{{ http_port }}/bin/catalina.sh stop

[Install]
WantedBy=multi-user.target
